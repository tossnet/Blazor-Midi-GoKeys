@namespace Blazor.Midi.GoKeys.Pages

<div class="box box-7">
	@if (ToneService.IsInitialized)
	{
		<GKTextBox @bind-Value:get="_searchText"
				   @bind-Value:set="FilterTones"
				   Placeholder="Search a tone..." />

		<br />
		<br />
		<div class="items">
			<GKButton class="item"
					  Caption="piano"
					  OnClick="@(() => PreselectClick("Ac.Piano"))" />
			<GKButton class="item"
					  Caption="e piano"
					  OnClick="@(() => PreselectClick("E.Piano1"))" />
			<GKButton class="item"
					  Caption="strings"
					  OnClick="@(() => PreselectClick("Ensemble Strings"))" />
			<GKButton class="item"
					  Caption="synth"
					  OnClick="@(() => PreselectClick("Synth Lead"))" />
			<GKButton class="item"
					  Caption="Bellpad"
					  OnClick="@(() => PreselectClick("Synth Bellpad"))" />
			<GKButton class="item"
					  Caption="Synth FX"
					  OnClick="@(() => PreselectClick("Synth FX"))" />
			<GKButton class="item"
					  Caption="drums"
					  OnClick="@(() => PreselectClick("Drums"))" />
			<GKButton class="item"
					  Caption="dist.Guitar"
					  OnClick="@(() => PreselectClick("Dist.Guitar"))" />
		</div>

		<br />
		<br />
		<select class="category-select" @onchange="OnCategoryChanged">
			<option value="">Select a category</option>
			@if (Categories != null)
			{
			@foreach (var item in Categories)
			{
				<option value="@item">@item</option>
			}
			}
		</select>
	}
</div>

<div class="box box-8">
	@if (selectedTones.Any())
	{
		<ul class="list-tones">
			@foreach (var tone in selectedTones)
			{
				<li @onclick="() => OnToneClick(tone)">@tone.Num - @tone.Name</li>
			}
		</ul>
	}
</div>