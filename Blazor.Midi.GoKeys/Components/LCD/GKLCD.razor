@namespace Blazor.Midi.GoKeys.Components

@inherits GKComponentBase

<div class="lcd-screen @GetClassDisabled()">
    <div class="lcd-states">
        <span class="lcd-small">@TextStates</span>
    </div>
    <div class="lcd-piano-keys">
        <div class="lcd-piano-key group-2"></div>
        <div class="lcd-piano-key group-2-end"></div>

        <div class="lcd-piano-key group-3"></div>
        <div class="lcd-piano-key group-3"></div>
        <div class="lcd-piano-key group-3-end"></div>

        <div class="lcd-piano-key group-2"></div>
        <div class="lcd-piano-key group-2-end"></div>

        <div class="lcd-piano-key group-3"></div>
        <div class="lcd-piano-key group-3"></div>
        <div class="lcd-piano-key group-3-end"></div>
    </div>
    <div class="lcd-content">
        @((MarkupString)MainContent)
    </div>
    <div class="lcd-menu">
        <span class="lcd-menu-item">LOWER</span>
        <span class="lcd-menu-item">UPPER</span>
        <span class="lcd-menu-item">LIST</span>
        <span class="lcd-menu-item">SETTING</span>
    </div>
</div>